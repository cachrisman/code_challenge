<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field form-group form-check">
    <%= f.label :receive_marketing, class: 'checkbox' do %>
      <%= f.check_box :receive_marketing %>
      Receive Marketing
    <% end %>
  </div>

  <div class="field form-group form-check">
    <%= f.label :receive_articles, class: 'checkbox' do %>
      <%= f.check_box :receive_articles %>
      Receive Articles
    <% end %>
  </div>

  <div class="field form-group form-check">
    <%= f.label :receive_digest, class: 'checkbox' do %>
      <%= f.check_box :receive_digest %>
      Receive Digest
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
